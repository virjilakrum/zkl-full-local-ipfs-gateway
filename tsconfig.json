{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "types": [
      "svelte",
      "node",
      "vite/client"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "paths": {
      "$lib/*": ["src/lib/*"],
      "@/*": ["src/*"]
    },
    "noEmit": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    ".svelte-kit"
  ]
}